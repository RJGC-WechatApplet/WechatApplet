/* 水平显示 */
.flex-wrp-row{
  display: flex;
  flex-direction: row;
}
/* 垂直显示 */
.flex-wrp-column{
  display: flex;
  flex-direction: column;
}
/* 任务列表 */
.task{
  margin: 20rpx;
  position: relative;
  height: 300rpx;
  border-top: 2px solid #dadada;
  border-left: 2px solid #dadada;
  border-right: 2px solid #dadada;
  border-bottom: 2px solid #dadada;
  border-radius: 20rpx;
  background-color: mintcream;
}
/* 头像内容框 */
.photoContent{
  width: 100%;
  height: 200rpx;
  padding: 25rpx;
  position: relative;
}
.photoview{
  margin-left: 15rpx;
  flex: 1;
  align-items: center;
}
.contentview{
  height: 100%;
  width: 500rpx;
  padding: 10rpx 25rpx;
  align-items: center;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
/* 头像 */
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 15rpx;
  border-radius: 50%;
}
